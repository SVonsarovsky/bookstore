<div class="checkout clearfix">
    <%= render 'steps' %>
    <h1>Checkout</h1>
    <div class="row">
        <div class="col-md-3">
            <div class="edit"><%= link_to('(edit)', wizard_path(:addresses)) %></div>
            <h2>Shipping Address</h2>
            <%= render 'shared/addr_details', address: @order.shipping_address %>
        </div>
        <div class="col-md-3">
            <div class="edit"><%= link_to('(edit)', wizard_path(:addresses)) %></div>
            <h2>Billing Address</h2>
            <%= render 'shared/addr_details', address: @order.billing_address %>
        </div>
        <div class="col-md-3">
            <div class="edit"><%= link_to('(edit)', wizard_path(:shipping)) %></div>
            <h2>Shipping method</h2>
            <div class="details">
                <%= @order.shipping_method.name %>
            </div>
        </div>
        <div class="col-md-3">
            <div class="edit"><%= link_to('(edit)', wizard_path(:payment)) %></div>
            <h2>Payment information</h2>
            <div class="details">
                <%= @order.credit_card.display_number %><br />
                <%= @order.credit_card.display_month %>/<%= @order.credit_card.expiration_year %>
            </div>
        </div>
    </div>
</div>
<div class="order clearfix">
    <%= render 'shared/order', order_items: @order.books %>
    <div class="clearfix">
        <div class="pull-right">
            <div class="subtotal clearfix">
                <div class="pull-right"><strong><%= number_to_currency(@order.total_price) %></strong><br /><strong><%= number_to_currency(@order.shipping_cost) %></strong></div>
                <div class="pull-right">SUBTOTAL: &nbsp; <br />SHIPPING: &nbsp; </div>
            </div>
        </div>
    </div>
    <div class="clearfix total">
        <div class="pull-right subtotal">
            ORDER TOTAL: &nbsp; <strong><%= number_to_currency(@order.total_price+@order.shipping_cost) %></strong>
        </div>
    </div>
    <%= form_tag(wizard_path, :method => 'put') do %>
        <%= button_tag('PLACE ORDER', :class => 'btn btn-default', :type => 'submit', :name => 'confirm') %>
    <% end %>
</div>
