<!DOCTYPE html>
<html>
<head>
  <title>The Bookstore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'custom', media: 'all' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <header>
    <div class="row">
      <div class="col-md-3 logo">The Bookstore</div>
      <div class="col-md-3">
        <%= home_page? ? 'HOME' : link_to('HOME', root_path) %> |
        <%= shop_page? ? 'SHOP' : link_to('SHOP', shop_path) %>
      </div>
      <div class="col-md-3 text-center">
        <i class="glyphicon glyphicon-shopping-cart"></i>
        <%= cart_page? ? 'CART' : link_to('CART', cart_path) %>: <%= cart_details %>
      </div>
      <div class="col-md-3 text-right">
        <% if user_signed_in? %>
            <%= link_to 'Settings', edit_user_registration_path %> |
            <%= orders_page? ? 'Orders' : link_to('Orders', orders_path) %> |
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        <% else %>
            <%= link_to 'Sign up', sign_up_path %> |
            <%= link_to 'Sign in', sign_in_path %>
        <% end %>
      </div>
    </div>
  </header>

  <div id="flash-message">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash-#{name}" %>
    <% end %>
  </div>

  <%= yield %>

  <footer>
    <p class="pull-right"><a href="#">Back to top</a></p>
    <p>&copy; 2014&ndash;<%=Time.now.year %> Bookstore, Inc.</p>
  </footer>
</div>

</body>
</html>
